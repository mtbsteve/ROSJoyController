        android:layout_width="21dp"
        android:layout_height="19dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_xbox_controller_dpad_down"
        android:tint="@color/cyanea_primary_dark"
        app:layout_constraintBottom_toBottomOf="@+id/controller_frame"
        app:layout_constraintEnd_toEndOf="@+id/controller_frame"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="@+id/controller_frame"
        app:layout_constraintTop_toTopOf="@+id/controller_frame"
        app:layout_constraintVertical_bias="0.571" />
    <!--Controller Frame-->
    <ImageView
        android:id="@+id/controller_frame"
        android:layout_width="347dp"
        android:layout_height="235dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_xbox_controller"
        android:tint="@color/cyanea_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
