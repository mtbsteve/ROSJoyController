        android:layout_width="17.9dp"
        android:layout_height="17.9dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_xbox_controller_round_buttons"
        android:tint="@color/cyanea_primary_dark"

        app:layout_constraintBottom_toBottomOf="@+id/controller_frame"
        app:layout_constraintEnd_toEndOf="@+id/controller_frame"
        app:layout_constraintHorizontal_bias="0.760"
        app:layout_constraintStart_toStartOf="@+id/controller_frame"
        app:layout_constraintTop_toTopOf="@+id/controller_frame"
        app:layout_constraintVertical_bias="0.208" />
    <!--Button Down-->
    <ImageView
        android:id="@+id/button_down"
        android:layout_width="17.9dp"
